<!DOCTYPE html>
<html>
  <head>
    <title>BEtsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8c1f61dbd4.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <%= link_to 'planEtsy', root_path, class: 'navbar-brand' %>
        <div class="navbar-collapse collapse justify-content-between align-items-center w-100" id="collapsingNavbar2">
          <ul class="navbar-nav mx-auto text-md-center text-left">
            <li class="nav-item">
              <%= link_to 'Products', products_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Merchants', users_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if session[:user_id] %>
              <li><%= link_to "#{ User.find_by(id: session[:user_id]).username }", current_user_path(session[:user_id]), class: 'nav-link text-nowrap' %></li>
              <li><%= link_to 'Log out', logout_path, method: :delete, class: 'nav-link text-nowrap' %></li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Login', github_login_path, class: 'nav-link' %>
              </li>
            <% end %>
            <% if session[:order_id] %>
              <li class="nav-item"><%= link_to "Cart", order_path(session[:order_id]), class: 'nav-link' %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Cart", '/cart', class: 'nav-link' %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <section class="flash-msg__section">
      <% flash.each do |type, message| %>
        <div class="flash-alert <%= type %>">
          <%= message %>
      <% end %>
      <% if @product %>
        <% if @product.errors.any? %>
          <ul>
            <% @product.errors.each do |column, message| %>
              <li><strong><%= column.capitalize %></strong>: <%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
        </div>
    </section>

    <%= yield %>

  </body>
</html>
