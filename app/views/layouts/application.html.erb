<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <%= link_to 'team name tbd', root_path, class: 'navbar-brand' %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if session[:user_id] %>
              <li><%= link_to "#{ User.find_by(id: session[:user_id]).username }", current_user_path(session[:user_id]), class: 'nav-link' %></li>
              <li><%= link_to 'Log out', logout_path, method: :delete, class: 'nav-link' %></li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Login', github_login_path, class: 'nav-link' %>
              </li>
            <% end %>
            <% if session[:order_id] %>
              <li class="nav-item"><%= link_to "Carta", order_path(session[:order_id]), class: 'nav-link' %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Cartb", '/cart', class: 'nav-link' %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
