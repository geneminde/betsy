<div class="prod-item">
  <div class="prod-img <%= product.available ? 'not-retired' : 'retired' %>">
    <%= image_tag product.photo_url, alt: "Product image" %>
  </div>
  <h6><%= link_to product.name, product_path(product) %></h6>
  $<%= number_with_delimiter(product.price) %>
  <% if product.quantity == 0 %>
    <div class="sold-out">Sold Out</div>
  <% else %>
    <div class></div>
  <% end %>
  <% if defined? button_id2 %>
    <div class="create-button merch-dash" id=<%= button_id2 %>><%= link_to 'Edit', edit_product_path(product) %></div>
    <% if defined? stock_button %>
      <div class="create-button merch-dash" id=<%= button_id2 %>>
        <%= link_to stock_button, retire_product_path(product), method: :patch %>
      </div>
    <% end %>
  <% end %>
</div>