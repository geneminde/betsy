<section>
  <%= form_with model: @product do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.text_field :photo_url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :available %>
      <%= f.text_field :available, class: "form-control" %>
    </div>
<!--    <div class="form-group">-->
      <%#= f.label :category %>
      <%#= f.select :category, Product::CATEGORIES, {}, class: "form-control" %>
<!--    </div>-->

    <div class="form-group">
      <%= f.submit action, class: "btn btn-primary" %>
    </div>
  <% end %>
</section>