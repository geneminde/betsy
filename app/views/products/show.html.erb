<section class= "product-content">
  <h2 class="product-content-header">
    <%= @product.name %>, <%= @product.price %>
  </h2>
  <p class="m-0"><%= @product.photo_url %></p>
  <p class="m-0"><%= @product.description %></p>

  <section class="mt-3">
    <%= link_to "Back to Main Page", root_path, class: "btn btn-info m-2", role: "button" %>
    <%# case @product.available %>
    <%# when available %>
      <%#= #{@product.quantity} available!" %>
      <%#= link_to "Add to cart", put path here, class: "btn btn-info m-2", role: "button" %>
    <%# when :unavailable %>
<!--    <div class="text-muted d-inline">Item is temporarily unavailable</div>-->
      <%# end %>
<!--    edit buttons for when logged in-->
  </section>
</section>

# Add to cart in product show page
<% if @product.available %>
  <%= form_with model: @orderitem, url: product_orderitems_path(@product) do |f| %>
    <li>
      <%= f.label :quantity %>
      <%=  f.select :quantity, options_for_select(1..product.quantity) %>
      <%= f.submit "Add to cart" %>
    </li>
  <% end %>

<% else %>
  <p>Out of Stock</p>
<% end %>