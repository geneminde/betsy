<main>
  <div class="prod-container listings">
    <h2>Planetary Products</h2>
    <ul class="listing-items">
      <% @products.each do |product| %>
        <li class=<% product.available ? "retired" : "not-retired" %>>
          <div>
            <% product_style = product.available? ? 'available' : 'unavailable' %>
            <%= image_tag(product.photo_url) %>
            <br>
            <%= link_to product.name.capitalize, product_path(product) %>
          </div>
          <div>
            $<%= product.price %>
            <br>
            <% if product.available %>
              <%= form_with model: @order_item, url: product_order_items_path(product) do |f| %>
                <%= f.label :quantity %>
                <%=  f.text_field :quantity %>
                <%= f.submit "Add to cart" %>
              <% end %>
            <% elsif product.quantity.zero? && !product.is_retired %>
              Sold Out
            <% end %>
          </div>
      <% end %>
    </ul>
  </div>
</main>
