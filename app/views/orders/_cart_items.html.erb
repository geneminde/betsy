<section class="order-info">
  <table class="table">
    <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Item Total</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.product.price %></td>

        <% if order.status == "pending" %>
          <td><%= render partial: "order_items/edit_order_item", locals: { order_item: item } %></td>
        <% else %>
          <td><%= item.quantity %></td>
        <% end %>
        <td><%= item.subtotal %></td>

        <td><%= button_to "Remove Item", order_item_path(item), method: :delete, data: {confirm: "Are you sure you want to remove #{item.product.name} from your cart.html.erb?"} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>