
<% if order %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Item Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>
          <td>put a partial here</td>
          <td>need a order item method to calc item total</td>
          <td><%= button_to "Remove Item", order_items_path(item.id), method: :delete,
                            data: {confirm: "Are you sure you want to remove #{item.product.name} from your cart?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <section class="subtotal">
    <p>
      Subtotal: <%= @order.subtotal %>
    </p>
    <p>
      Shipping:
    </p>
    <p>
      Total:
    </p>
  </section>


<% end %>