<% if order %>
  <section class="order-info">
    <table class="table">
      <h2>Shopping Cart</h2>
      <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Item Total</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% order.order_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>

          <td><%= render partial: "order_items/edit_order_item", locals: { order_item: item } %></td>

          <td><%= item.subtotal %></td>

          <td><%= button_to "Remove Item", order_item_path(item), method: :delete, data: {confirm: "Are you sure you want to remove #{item.product.name} from your cart.html.erb?"} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <section class="subtotal">
      <p class="end">
        Subtotal: <%= order.subtotal %>
      </p>
      <p class="end">
        Shipping:
      </p>
      <p class="end">
        Total:
      </p>
    </section>

    <section class="checkout-button end">
      <div class="create-button"><%= link_to "Checkout", edit_order_path %></div>
      <div class="create-button"><%= link_to "Continue Shopping", root_path %></div>
    </section>


  </section>

<% end %>